    "lodash": ">=4.17.4",
    "yeoman-generator": "3.1.1"
  },
  "devDependencies": {
    "eslint": "5.1.0",
    "eslint-config-airbnb-base": "13.0.0",
    "eslint-plugin-import": "2.13.0",
    "fs-extra": "6.0.1",
    "mocha": "5.2.0",
